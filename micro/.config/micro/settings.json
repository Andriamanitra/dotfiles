{
    "*": {
        "linter": false
    },
    "*.cr": {
        "tabsize": 2
    },
    "*.hs": {
        "tabsize": 2
    },
    "*.rb": {
        "tabsize": 2
    },
    "*.ex": {
        "tabsize": 2
    },
    "autoclose": false,
    "colorscheme": "mjinokai",
    "diffgutter": true,
    "divchars": "  ",
    "eofnewline": false,
    "ignorecase": false,
    "mkparents": true,
    "parsecursor": true,
    "pluginrepos": [
        "https://raw.githubusercontent.com/andriamanitra/micro-gotoctags/main/repo.json"
    ],
    "reload": "auto",
    "statusformatl": "$(filename) $(modified)($(line),$(col)) $(status.paste)| ft:$(opt:filetype) | Âµlsp:$(mlsp.status)",
    "statusformatr": "line $(line)/$(status.lines) ($(status.size)) ",
    "tabstospaces": true
}
