[init]
	defaultBranch = main
[pull]
	ff = only
[core]
	excludesfile = ~/.config/git/gitignore
[delta]
    features = decorations
[delta "decorations"]
    file-decoration-style = blue ul ol
    hunk-header-style = omit
    line-numbers = true
    line-numbers-left-format = ""
    line-numbers-right-format = "{np:^4}â”‚"
    tabs = 4
[alias]
	undo = reset HEAD^
	unstage = reset HEAD --
	last = log -1 --stat HEAD
	st = status --short --branch
	pr = !sh -c 'git fetch --update-head-ok $1 pull/$2/head:PR/$2 && git switch PR/$2' -
