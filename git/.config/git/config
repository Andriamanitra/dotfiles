[init]
	defaultBranch = main
[pull]
	ff = only
[core]
	excludesfile = ~/.config/git/gitignore
[delta]
    features = decorations
[delta "decorations"]
    file-decoration-style = blue ul ol
    hunk-header-style = omit
    line-numbers = true
    line-numbers-left-format = ""
    line-numbers-right-format = "{np:^4}â”‚"
    tabs = 4
[alias]
	undo = reset HEAD^
	unstage = reset HEAD --
	last = log -1 --stat HEAD
	st = status --short --branch
	pr = !sh -c 'git fetch --force --update-head-ok $1 pull/$2/head:PR/$2 && git switch PR/$2' -
	pr-clean = !sh -c 'git branch -D `git branch --list "PR/*"`'
	root = rev-parse --show-toplevel

[url "git@github.com:"]
    insteadOf = "gh:"

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
