{
    "*": {
        "linter": false
    },
    "ft:crystal": {
        "tabsize": 2
    },
    "ft:elixir": {
        "tabsize": 2
    },
    "ft:haskell": {
        "tabsize": 2
    },
    "ft:ruby": {
        "tabsize": 2
    },
    "ft:janet": {
        "tabsize": 2
    },
    "ft:makefile": {
        "tabstospaces": false
    },
    "ft:go": {
        "tabstospaces": false
    },
    "ftoptions": false,
    "autoclose": false,
    "colorscheme": "mjinokai",
    "diffgutter": true,
    "divchars": "  ",
    "eofnewline": false,
    "hlsearch": true,
    "hltaberrors": true,
    "hltrailingws": true,
    "ignorecase": false,
    "mkparents": true,
    "parsecursor": true,
    "pluginrepos": [
        "https://raw.githubusercontent.com/andriamanitra/micro-gotoctags/main/repo.json"
    ],
    "reload": "auto",
    "statusformatl": "$(initlua.shortfname) $(modified)$(status.paste)| ft:$(opt:filetype) | Âµlsp:$(mlsp.status)",
    "statusformatr": "$(col),$(line)/$(status.lines) ($(status.size)) ",
    "tabstospaces": true
}
